<section class="content-header" id="pick-ups-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <% content_for :title, "List Google Calendars" %>
        <h1>
          Google Calendars for <%= current_user.name %>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to(dashboard_path) do %>
              <i class="fa fa-dashboard"></i> Home
            <% end %>
          </li>
          <li class="breadcrumb-item"><a href="#"><%= link_to "Distributions", distributions_path %></a></li>
          <li class="breadcrumb-item active"><%= link_to 'Schedule', schedule_distributions_path %></li>
          <li class="breadcrumb-item active"><a href="#">Sync Google Calendar</a></li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>



<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <!-- jquery validation -->
        <div class="card card-primary">
          <!-- /.card-header -->
          <!-- form start -->
          <div class="card-body">
            <!-- Default box -->
            <div class="box">
              <div class="box-body">
                <h1>Please select a calendar to sync.</h1>
                <%= form_with url: google_calendar_sync_path do |f| %>
                  <% @calendars.each do |calendar| %>
                    <div class="form-check">
                      <%= f.radio_button :calendar_id, calendar.id, class: 'form-check-input radio_buttons' %>
                      <%= f.label calendar.summary.present? ? "#{calendar.summary} (#{calendar.id})" : calendar.id,
                                  class: 'form-check-label collection_radio_buttons' %>
                    </div>
                  <% end %>
                  <%= submit_button(align: '', icon: 'sync', text: 'Sync') %>
                <% end %>

              </div>
            </div>
          </div><!-- /.box -->
        </div>
      </div>
    </div>
  </div>
  <%= render partial: "barcode_items/barcode_modal" %>
</section>
